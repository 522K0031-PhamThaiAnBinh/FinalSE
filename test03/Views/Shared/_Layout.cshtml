<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KTPham's Restaurant</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" /> <!-- Font Awesome -->
    <style>
        .sidebar {
            width: 200px; /* Adjust width as needed */
            background-color: #343a40; /* Dark background */
            color: white;
            padding: 20px;
            height: 100vh; /* Full height */
            position: fixed; /* Fixed position */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5); /* Add shadow for depth */
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 15px; /* Padding for links */
                border-radius: 5px; /* Rounded corners */
                transition: background-color 0.3s; /* Smooth transition */
            }

                .sidebar a:hover {
                    background-color: #495057; /* Hover effect */
                }

        .content {
            margin-left: 220px; /* Space for sidebar */
            padding: 20px;
            flex-grow: 1; /* Take remaining space */
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Home</a>
        <a href="@Url.Action("Index", "Customers")"><i class="fas fa-home"></i> Customers</a>
        <a href="@Url.Action("Index", "MenuItems")"><i class="fas fa-utensils"></i> Menu</a>
        <a href="@Url.Action("Index", "Reservations")"><i class="fas fa-calendar-alt"></i> Reservations</a>
        <a href="@Url.Action("Create", "Orders")"><i class="fas fa-images"></i> Order</a>
        <a href="@Url.Action("Index", "OrderDetails")"><i class="fas fa-concierge-bell"></i> OrderDetails</a>
        <a href="@Url.Action("Index", "Payments")"><i class="fas fa-users"></i> Payment</a>
    </div>

    <div class="content">
        @RenderBody()
        <hr />
        <footer class="text-center mt-5">
            <p>&copy; 2024 - KTPham Restaurant</p>
            <p>Contact us: <a href="mailto:info@ktphamrestaurant.com">info@ktphamrestaurant.com</a></p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>