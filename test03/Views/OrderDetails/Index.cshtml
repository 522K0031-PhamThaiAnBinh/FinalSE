@model IEnumerable<test03.Models.OrderDetails>

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Menu Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>SubTotal</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderID</td>
                <td>@item.MenuItems.Name</td>
                <td>@item.Quantity</td>
                <td>@item.MenuItems.Price</td>
                <td>@item.SubTotal</td>
                <td>@item.Orders.Status</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderDetailID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderDetailID })
                </td>
            </tr>
        }
    </tbody>
</table>
