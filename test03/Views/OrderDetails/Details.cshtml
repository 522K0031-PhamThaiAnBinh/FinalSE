@model test03.Models.Orders

@{
    ViewBag.Title = "Order Details";
}

<h2>Order #@Model.OrderID</h2>

<p>
    <strong>Status: </strong>@Model.Status
</p>

<table class="table">
    <thead>
        <tr>
            <th>Menu Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>SubTotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.MenuItems.Name</td>
                <td>@item.Quantity</td>
                <td>@item.MenuItems.Price</td>
                <td>@item.SubTotal</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Add Items", "Create", new { orderId = Model.OrderID })
</div>
