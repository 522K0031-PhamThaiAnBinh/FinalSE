@model test03.Models.OrderDetails

@{
    ViewBag.Title = "Create Order";
}

<h2>Create Order</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Create Order</h4>
    <hr />

    <!-- Dropdown for selecting menu items -->
    <div class="form-group">
        <label for="menuItemIds">Menu Items</label>
        <select name="menuItemIds" id="menuItemIds" multiple="multiple" class="form-control">
            @foreach (var item in ViewBag.MenuItems)
            {
                <option value="@item.MenuItemID">@item.Name</option>
            }
        </select>
    </div>

    <!-- Input field for quantities -->
    <div class="form-group">
        <label for="quantities">Quantities (separate with commas)</label>
        <input type="text" name="quantities" class="form-control" placeholder="Enter quantities" />
    </div>

    <div class="form-group">
        <input type="submit" value="Create Order" class="btn btn-primary" />
    </div>
}
